<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Main bubble body -->
    <item
        android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="12dp"/>

            <padding
                android:left="10dp"
                android:top="6dp"
                android:right="10dp"
                android:bottom="6dp"/>
        </shape>
    </item>

    <!-- Arrow (triangle made from rotated square) -->
    <item
        android:width="10dp"
        android:height="10dp"
        android:gravity="right|center_vertical">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF"/>
            </shape>
        </rotate>
    </item>

</layer-list>
